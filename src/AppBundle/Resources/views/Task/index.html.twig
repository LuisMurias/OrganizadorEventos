{% extends 'base_dash.html.twig' %}

{% block content %}
    
    <h1>Task list</h1>

        
    <div id="tasklistcontainer">
        {% for tasklist in tasklists %}
        <div class="tasklist">
            <h3 class="tasklist_name">{{ tasklist.name }}</h3>
            <h4 class="tasklist_description">{{ tasklist.description }}</h4>
            <div class="tasks">
                {% for task in tasklist.tasks %}
                <h3 class="task_name">{{ task.name }}</h3>
                <h4 class="task_description">{{ task.description }}</h4>
                {% endfor %}
            </div>
        </div>
        {% endfor %}
    </div>
            
{% endblock %}